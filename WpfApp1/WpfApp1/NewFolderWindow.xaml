<Window x:Name="NewFolder" x:Class="WpfApp1.NewFolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="New Folder" Height="120" Width="800" WindowStyle="ToolWindow" ScrollViewer.VerticalScrollBarVisibility="Disabled" Loaded="NewFolder_Loaded" WindowStartupLocation="CenterOwner">
    <Grid Margin="0,0,0,0">
        <Label Content="New Folder (Directory)" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Width="774"/>
        <TextBox x:Name="TxtFolderName" HorizontalAlignment="Left" Height="23" Margin="8,27,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="776"/>
        <Button x:Name="BtnOK" Content="OK" HorizontalAlignment="Left" Margin="520,57,0,0" VerticalAlignment="Top" Width="130" Click="BtnOK_Click"/>
        <Button x:Name="BtnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="655,57,0,0" VerticalAlignment="Top" Width="129" Click="BtnCancel_Click"/>

    </Grid>
</Window>
